@using WebAppCarrozzeriaAuto.Models.ModelsPerViews
@model List<Auto>


<div class="container-fluid py-5 mb-5 d-flex justify-content-center" style="  background-image: url('/Assets/img/hans-m-OTnkae1syxk-unsplash.jpg');
            background-position: center;
            background-size:cover;
            background-repeat:no-repeat;
            background-color:#444;
            background-blend-mode: overlay;">
    <div class="p-5 mt-5 lc-block col-xxl-7 col-lg-8 col-12 align-self-center text-center" style="height: 300px;">
        <div class="lc-block">
            <div editable="rich">
                <h2 class="fw-bolder display-3" style="color: white;">Le nostre auto</h2>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-md-3 g-5 mt-2">

        @foreach (Auto auto in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12">


                <div class="card shadow border rounded-0 me-2">
                    <img src="@auto.UrlImmagine" class="card-img-top" width="100%">
                    <div class="card-body pt-0 px-0 mt-3">
                        <div class="d-flex flex-row justify-content-between mb-0 px-3 mt-3 align-text-bottom">
                            <div class="d-flex flex-column col-11"><h6 class="fw-bold">@auto.MarcaAuto<br /></h6><h6>@auto.NomeModello</h6></div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <!--TASTO MI PIACE-->
                                <div id="main-content" class="col-1 align-items-center">
                                    <div>
                                        <input type="checkbox" id="checkbox" />
                                        <label for="checkbox">
                                            <svg id="heart-svg" viewBox="467 392 58 57" xmlns="http://www.w3.org/2000/svg">
                                                <g id="Group" fill="none" fill-rule="evenodd" transform="translate(467 392)">
                                                    <path d="M29.144 20.773c-.063-.13-4.227-8.67-11.44-2.59C7.63 28.795 28.94 43.256 29.143 43.394c.204-.138 21.513-14.6 11.44-25.213-7.214-6.08-11.377 2.46-11.44 2.59z" id="heart" fill="#AAB8C2" />
                                                    <circle id="main-circ" fill="#E2264D" opacity="0" cx="29.5" cy="29.5" r="1.5" />


                                                </g>
                                            </svg>
                                        </label>
                                    </div>
                                </div>
                                <!--TASTO MI PIACE-->
                            }
                        </div>
                        <div style="background: #ECEDF1" class="d-flex flex-row justify-content-between p-3 mid mt-4">
                            <div class="d-flex flex-column"><small class="text-muted mb-1">CARBURANTE</small><div class="d-flex flex-row"><img src="https://imgur.com/iPtsG7I.png" width="35px" height="25px"><div class="d-flex flex-column ml-1 align-self-center"><small class="ghj">@auto.Specifiche.Alimentazione</small></div></div></div>                     
                            <div class="d-flex flex-column">
                                <small class="text-muted mb-1">TIPO</small><div class="d-flex flex-row">
                                    <div class="d-flex flex-column ml-1 align-self-center">
                                        <div class="d-flex flex-column align-items-center">
                                            @if (auto.Usata)
                                            {
                                                <small class="ghj">USATA</small>
                                            }
                                            else
                                            {
                                                <small class="ghj">NUOVA</small>

                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>                            
                            <div class="d-flex flex-column"><small class="text-muted mb-2">POTENZA</small><div class="d-flex flex-row"><img src="https://imgur.com/J11mEBq.png"><small class="align-self-center ml-1">@auto.Specifiche.Potenza CV</small></div></div>
                        </div>
                        <h5 class="fw-bold text-center mt-3">€ @auto.Prezzo</h5>
                        <div class="mx-3 mt-3 mb-2 text-center">
                            <a class="btn btn-outline-dark" href="@Url.Action("DettagliMacchina", "Auto", new { id = auto.Id })" role="button"><small>VISUALIZZA</small></a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

    @section Scripts{

    }

