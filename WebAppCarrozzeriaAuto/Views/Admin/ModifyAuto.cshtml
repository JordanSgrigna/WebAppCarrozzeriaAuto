@using WebAppCarrozzeriaAuto.Models.ModelsPerViews
@model ModelloMacchinaCreateUpdate

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-controller="Admin" asp-action="ModifyAuto" asp-route-id="@Model.Auto.Id" method="post" class="p-5">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="@Model.Auto.NomeModello" class="form-label">Nome Modello</label>
                    <input asp-for="@Model.Auto.NomeModello" rows="10" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.NomeModello" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.Descrizione" class="form-label">Descrizione</label>
                    <textarea asp-for="@Model.Auto.Descrizione="10" class="form-control" required></textarea>
                    <span asp-validation-for="@Model.Auto.Descrizione="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.UrlImmagine" class="form-label">URL Immagine</label>
                    <input asp-for="@Model.Auto.UrlImmagine type="text" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.UrlImmagine" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.Colore" class="form-label">Colore</label>
                    <input asp-for="@Model.Auto.Colore type=" text" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.Colore" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.Kilometraggio" class="form-label">Kilometraggio</label>
                    <input asp-for="@Model.Auto.Kilometraggio" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.Kilometraggio" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.Prezzo" class="form-label">Prezzo</label>
                    <input asp-for="@Model.Auto.Prezzo" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.Prezzo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.AnnoImmatricolazione" class="form-label">Anno di immatricolazione</label>
                    <input asp-for="@Model.Auto.AnnoImmatricolazione" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.AnnoImmatricolazione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.NumeroAutoNelConcessionario" class="form-label">Numero di Auto Disponibili Nel Concessionario</label>
                    <input asp-for="@Model.Auto.NumeroAutoNelConcessionario" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.NumeroAutoNelConcessionario" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.AnnoInizioProduzione" class="form-label">Anno di inizio produzione</label>
                    <input asp-for="@Model.Auto.AnnoInizioProduzione" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.AnnoInizioProduzione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Auto.AnnoFineProduzione" class="form-label">Anno di fine produzione</label>
                    <input asp-for="@Model.Auto.AnnoFineProduzione" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Auto.AnnoFineProduzione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <select asp-for="@Model.Auto.Usata" class="form-select" aria-label="Usata?">
                        <option value="true" selected>Usata</option>
                        <option value="false">Nuova</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Salva</button>
            </form>
        </div>
    </div>
</div>