@using WebAppCarrozzeriaAuto.Models
@model Marca

<div class="container">
    <div class="row">
        <form asp-controller="Admin" asp-action="CreateMarca" method="post">
            @Html.AntiForgeryToken()
            <div class="col">
                <label asp-for="Nome" for="NomeMarca" class="form-label">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="PaeseOrigine" for="PaeseOrigine" class="form-label">Paese d'origine:</label>
                <input asp-for="PaeseOrigine" type="text" class="form-control">
                <span asp-validation-for="PaeseOrigine" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-small btn-info">Aggiungi</button>
        </form>
    </div>
</div>
