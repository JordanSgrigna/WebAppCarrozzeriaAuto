@using WebAppCarrozzeriaAuto.Models.ModelsPerViews
@model Marca

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-controller="Admin" asp-action="ModifyMarca" asp-route-id="@Model.Id" method="post" class="p-5">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome:</label>
                    <input asp-for="Nome" type="text" class="form-control" required>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PaeseOrigine" class="form-label">Paese d'origine:</label>
                    <input asp-for="PaeseOrigine" type="text" class="form-control" required>
                    <span asp-validation-for="PaeseOrigine" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Salva</button>
            </form>
        </div>
    </div>
</div>