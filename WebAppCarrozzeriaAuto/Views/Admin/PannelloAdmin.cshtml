<div class="modal fade modal-dialog modal-dialog-centered" id="dbModal" tabindex="-1" aria-labelledby="dbModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="dbModalLabel">Attenzione!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    L'auto è già presente nel database?
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-primary" href="@Url.Action("CreateAuto","Admin")">No</a>
                <a type="button" class="btn btn-primary" href="@Url.Action("AcquisisciMacchina","Admin")">Sì</a>
            </div>
        </div>
    </div>
</div>