
<div class="container contact">
    <div class="row">
        <div class="col-md-3 bg-dark">
            <div class="col-md-3 bg-dark">
                <div class="contact-info">
                    <img src="/assets/img/RoadRunner1.png" style="height: 100px;" />
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="contact-form">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="fname">Nome:</label>
                    <div class="col-sm-10">
                        <input type="text"
                               class="form-control"
                               id="name"
                               placeholder="Inserisci il tuo nome"
                               name="fname" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="lname">Cognome:</label>
                    <div class="col-sm-10">
                        <input type="text"
                               class="form-control"
                               id="surname"
                               placeholder="Inserisci il tuo cognome"
                               name="lname" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        <input type="email"
                               class="form-control"
                               id="email"
                               placeholder="Inserisci la tua email"
                               name="email" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="comment">Messaggio:</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="5" id="message"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10 mt-3">
                        <button type="submit" class="btn btn-warning">Invia</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>