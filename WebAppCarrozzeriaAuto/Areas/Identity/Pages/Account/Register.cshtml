@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrati";
}





<div class="row justify-content-around">
    <div class="col-md-4">
        <h1 class="display-1 fw-bolder">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="mb-4">Crea un nuovo account.</h2>
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Conferma password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-secondary my-3">Registrati</button>
        </form>
    </div>
   
    
</div>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-4 mt-4">
        <section>
            <h3>Registrati con un servizio esterno.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Altre modalità di autenticazione non sono ancora state configurate.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }

            <div class="mt-3">
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-facebook" style="color: #000;"></i>
                </a>
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-twitter" style="color: #000;"></i>
                </a>
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-google" style="color: #000;"></i>
                </a>
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-instagram" style="color: #000;"></i>
                </a>
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-linkedin" style="color: #000;"></i>
                </a>
                <a href="" class="me-4 link-white">
                    <i class="fa-brands fa-github" style="color: #000;"></i>
                </a>
            </div>

        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



<style>

    body {

        overflow-x: hidden;
    }

</style>